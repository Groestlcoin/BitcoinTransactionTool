<Window x:Class="BitcoinTransactionTool.Views.TransactionEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" AllowsTransparency="True"
        xmlns:local="clr-namespace:BitcoinTransactionTool.Views" Background="{StaticResource SecondaryBackgroundBrush}" WindowStyle="None"
        Title="Edit Transactions" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" MaxHeight="720" ShowInTaskbar="False" SizeToContent="WidthAndHeight" Icon="/BitcoinTransactionTool;component/GrsIcon.ico">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30px"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <local:Titlebar Grid.Row="0" HorizontalAlignment="Right" Padding="0 0 0 5" Margin="0 -2 0 0" VerticalAlignment="Top" IsMainWindow="False"></local:Titlebar>
            <local:TransactionEditView Grid.Row="1"/>
        </Grid>
</Window>
